<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <package name="user" extends="struts-default" namespace="/user">
        <action name="add" class="UserAction" method="add">
            <result name="add">add.jsp</result>
        </action>

        <action name="delete" class="UserAction" method="delete">
            <result name="delete">delete.jsp</result>
        </action>

        <action name="alter" class="UserAction" method="alter">
            <result name="alter">alter.jsp</result>
        </action>

        <action name="query" class="UserAction" method="query">
            <result name="query">query.jsp</result>
        </action>

    </package>
</struts>